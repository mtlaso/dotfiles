// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
	"features": {
		"edit_prediction_provider": "zed"
	},
	"ssh_connections": [
		{
			"host": "vps1",
			"projects": []
		}
	],
	"icon_theme": "Colored Zed Icons Theme Dark",
	"collaboration_panel": {
		"dock": "right"
	},
	"title_bar": {
		"show_branch_icon": true
	},
	"edit_predictions": {
		"disabled_globs": [],
		"mode": "subtle",
		"copilot": {
			"proxy": null,
			"proxy_no_verify": null
		},
		"enabled_in_text_threads": false
	},
	"agent": {
		"always_allow_tool_actions": false,
		"inline_assistant_model": {
			"provider": "copilot_chat",
			"model": "o3-mini"
		},
		"default_profile": "ask",
		"play_sound_when_agent_done": true,
		"default_model": {
			"provider": "zed.dev",
			"model": "claude-sonnet-4"
		}
	},
	"project_panel": {
		"entry_spacing": "comfortable",
		"sticky_scroll": false
	},
	"lsp": {
		"clangd": {
			"binary": {
				"path": "/usr/bin/clangd",
				"arguments": [
					"--background-index",
					"--compile-commands-dir=build",
					"--clang-tidy-checks=*",
					"--header-insertion=never",
					"--pretty",
					"--compile-commands-dir=build"
					// "--header-insertion-decorators=none"
				]
			}
		},
		"biome": {
			"settings": {
				"configuration_path": "./biome.json",
				"require_config_file": true
			}
		},
		"vtsls": {
			"settings": {
				"javascript": {
					"preferences": {
						"importModuleSpecifier": "non-relative"
					}
				},
				"typescript": {
					"preferences": {
						"importModuleSpecifier": "non-relative"
					}
				}
			}
		},
		"golangci-lint": {
			"initialization_options": {
				"command": [
					"golangci-lint",
					"run",
					"--config=golangci.yml",
					"--output.json.path=stdout",
					"--issues-exit-code=1",
					"--show-stats=false"
				]
			}
		}
	},
	"languages": {
		"Go": {
			"language_servers": ["gopls", "golangci-lint"]
		},
		"JavaScript": { "formatter": { "language_server": { "name": "biome" } } },
		"TypeScript": { "formatter": { "language_server": { "name": "biome" } } },
		"TSX": { "formatter": { "language_server": { "name": "biome" } } },
		"JSON": { "formatter": { "language_server": { "name": "biome" } } },
		"JSONC": { "formatter": { "language_server": { "name": "biome" } } },
		"CSS": { "formatter": { "language_server": { "name": "biome" } } }
	},
	"indent_guides": {
		"enabled": false
	},
	"cursor_blink": false,
	"format_on_save": "on",
	"show_edit_predictions": true,
	"vim_mode": true,
	"relative_line_numbers": true,
	"autosave": "on_focus_change",
	"ui_font_size": 16,
	"buffer_font_size": 18,
	"buffer_font_family": "mononoki",
	"buffer_line_height": "standard",
	"theme": {
		"mode": "system",
		"light": "Catppuccin Macchiato - No Italics",
		"dark": "Blankeos Zen Dark"
	}
}
